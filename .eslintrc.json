{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "semi": "off",
        "array-bracket-spacing": "warn",
        "no-trailing-spaces": "warn",
        "eqeqeq": "warn",
        "no-else-return": "warn",
        "require-await": "warn",
        "indent": ["warn", 4],
        "block-spacing": "warn",
        "implicit-arrow-linebreak": "warn",
        "arrow-body-style": ["warn", "as-needed"]
    }
}
